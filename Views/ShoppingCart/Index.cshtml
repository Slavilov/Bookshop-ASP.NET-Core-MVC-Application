@{
    ViewData["Title"] = "Shopping Cart";
}

<h2>Your Shopping Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Quantity</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Items)
        {
            <tr>
                <td>@item.Book.Title</td>
                <td>@item.Quantity</td>
                <td>@(item.Book.Price * item.Quantity)</td>
                <td>
                    <a href="@Url.Action("RemoveFromCart", "ShoppingCart", new { bookId = item.BookId })" class="btn btn-danger">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p><strong>Total: </strong>@ViewBag.TotalPrice</p>

<a href="@Url.Action("ClearCart", "ShoppingCart")" class="btn btn-warning">Clear Cart</a>
<a href="#" class="btn btn-success">Checkout</a>
