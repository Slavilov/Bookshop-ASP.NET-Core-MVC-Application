@model Bookshop_ASP.NET_Core_MVC_Application.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-danger">Delete Book</h2>
                </div>
                <div class="card-body">
                    <h4 class="text-danger">Are you sure you want to delete this book?</h4>
                    <div>
                        <h4>Title: @Model.Title</h4>
                        <p>Description: @Model.Description</p>
                        <p>Price: @Model.Price.ToString("C")</p>
                        <p>Publication Date: @Model.PublicationDate.ToString("MMMM dd, yyyy")</p>
                        <p>Author: @(Model.Author != null ? Model.Author.FirstName + " " + Model.Author.LastName : "Unknown")</p>
                        <p>Genres: @string.Join(", ", Model.BookGenres.Select(bg => bg.Genre.Name))</p>
                        <!-- Add more details as needed -->
                    </div>
                    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
