@model Author

@{
    ViewData["Title"] = "Delete Author";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-danger">Delete Author</h2>
                </div>
                <div class="card-body">
                    <h4 class="text-danger">Are you sure you want to delete this author?</h4>
                    <div>
                        <h4>Author: @Model.FirstName @Model.LastName</h4>
                        <p>Description: @Model.Description</p>
                        <p>Nationality: @Model.Nationality</p>
                        <p>Genres: @string.Join(", ", Model.AuthorGenres.Select(ag => ag.Genre.Name))</p>
                        <p>
                            Books:
                            <ul>
                                @if (Model.Books != null && Model.Books.Any())
                                {
                                    @foreach (var book in Model.Books)
                                    {
                                        <li>@book.Title</li>
                                    }
                                }
                                else
                                {
                                    <li>No books available for this author.</li>
                                }
                            </ul>
                        </p>
                    </div>
                    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
